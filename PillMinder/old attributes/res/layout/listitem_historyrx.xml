<?xml version="1.0" encoding="utf-8"?>
<!-- PillMinder by Clyde Zuber -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:baselineAligned="false"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal" >
    
	<TextView 
	    android:id="@+id/idGone"
    	style="@style/ListItem"
    	android:visibility="gone" />

	<TextView 
	    android:id="@+id/dateTimeShow"
    	style="@style/ListItem"
    	android:textIsSelectable="false" />
	
	<TextView 
	    android:id="@+id/compShow"
    	style="@style/ListItem"
    	android:textIsSelectable="false" />
		
	<TextView
        android:id="@+id/listItemShow"
        style="@style/ListItem"
        android:text="@string/rx_text"
        android:paddingRight="2dp"
        android:textIsSelectable="false" />

	<TextView 
	    android:id="@+id/rxShow"
    	style="@style/ListItem"
    	android:textIsSelectable="false" />
	
	<TextView
        android:id="@+id/medShow"
        style="@style/ListItem"
        android:textIsSelectable="false" />
		
	<TextView
        android:id="@+id/mgShow"
        style="@style/ListItem"
        android:paddingRight="0dp"
        android:textIsSelectable="false" />
		
	<TextView
        android:id="@+id/mgLabelShow"
        style="@style/ListItem"
        android:paddingLeft="0dp"
        android:text="@string/mg_suffix"
        android:textIsSelectable="false" />
	
</LinearLayout>